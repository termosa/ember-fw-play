<div class="row">
  <div class="col-md-12">
    <form {{action 'newEvent' name logoUrl date on='submit' }}>
      <div class="form-group">
        <label for="name">Name</label>
        {{input id="name" class="form-control" name="name" type="text" value=name }}
      </div>
      <div class="form-group">
        <label for="logo">Logo</label>
        {{input id="logo" class="form-control" name="logoUrl" type="text" value=logoUrl }}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input id="date" class="form-control" name="date" type="date" value=date }}
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
      </div>
    </form>
  </div>
</div>

{{yield}}
